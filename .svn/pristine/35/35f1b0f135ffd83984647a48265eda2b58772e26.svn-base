bool protectApply( void )
{
	PLUGIN_CHECK_ERROR( process, return false, NO_DEBUGGE );

	isDebuggerPresentApply( g_options.isDebuggerPresent );
	ntGlobalFlagApply( g_options.ntGlobalFlag );

	return true;
}
