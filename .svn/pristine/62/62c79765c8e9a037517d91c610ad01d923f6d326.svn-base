#include "stdafx.h"
#include "OllyExtGeneral.h"


sGeneralOptions g_generalOptions = { MASMSYNTAX };


#define RIPPERSYNTAX L"RipperSyntax"


void generalReadOptions( void )
{
	DWORD data = 0;
	Getfromini( NULL, PLUGIN_NAME, RIPPERSYNTAX, L"%d", &data );
	g_generalOptions.ripperSyntax = (eRipperSyntax)data;
	if( g_generalOptions.ripperSyntax < MASMSYNTAX )
		g_generalOptions.ripperSyntax = MASMSYNTAX;
	if( g_generalOptions.ripperSyntax > ATSYNTAX )
		g_generalOptions.ripperSyntax = MASMSYNTAX;
}


void generalWriteOptions( void )
{
	Writetoini( NULL, PLUGIN_NAME, RIPPERSYNTAX, L"%d", g_generalOptions.ripperSyntax );
}
