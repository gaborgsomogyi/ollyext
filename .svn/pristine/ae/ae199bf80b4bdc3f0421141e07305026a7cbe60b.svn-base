#include "stdafx.h"
#include "..\OllyExtRemote.h"
#include "HeapFlags.h"


#define PROCESS_HEAP_OFFSET ( 0x18 )
#define HEAP_FLAGS_OFFSET ( 0x40 )


static bool g_applied = false;
static BYTE g_patch[] = { 0x02, 0x00, 0x00, 0x00 };
static BYTE g_orig[sizeof( g_patch )] = { 0 };


void heapFlagsReset( void )
{
	g_applied = false;
}


void heapFlagsApply( bool protect )
{
	if( protect )
	{
		if( g_applied ) return;

		DWORD processHeapAddress = peblock + PROCESS_HEAP_OFFSET;
		DWORD processHeap = 0;
		BOOL readSuccess = ReadProcessMemory( process, (void*)processHeapAddress, &processHeap, sizeof( processHeap ), NULL );
		PLUGIN_CHECK_ERROR( readSuccess, return;, UNABLE_TO_READ_MEMORY_AT, processHeapAddress );

		if( !remotePatchApply( process, (void*)( processHeap + HEAP_FLAGS_OFFSET ), g_orig, g_patch, sizeof( g_patch ) ) )
			return;

		g_applied = true;
	}
	else
	{
		if( !g_applied ) return;

		DWORD processHeapAddress = peblock + PROCESS_HEAP_OFFSET;
		DWORD processHeap = 0;
		BOOL readSuccess = ReadProcessMemory( process, (void*)processHeapAddress, &processHeap, sizeof( processHeap ), NULL );
		PLUGIN_CHECK_ERROR( readSuccess, return;, UNABLE_TO_READ_MEMORY_AT, processHeapAddress );

		if( !remotePatchApply( process, (void*)( processHeap + HEAP_FLAGS_OFFSET ), NULL, g_orig, sizeof( g_orig ) ) )
			return;

		g_applied = false;
	}
}
