#pragma once


typedef union
{
	ULONG data;

	struct
	{
		unsigned CF : 1;
		unsigned reserved1 : 1;
		unsigned PF : 1;
		unsigned reserved2 : 1;
		unsigned AF : 1;
		unsigned reserved3 : 1;
		unsigned ZF : 1;
		unsigned SF : 1;
		unsigned TF : 1;
		unsigned IF : 1;
		unsigned DF : 1;
		unsigned OF : 1;
	};
} EFLAGS;

typedef struct
{
	ULONG eip;
	ULONG cs;
	EFLAGS eflags;
	ULONG esp;
	ULONG ss;
} STACK_WITHOUTERR;

typedef struct
{
	ULONG errorCode;
	ULONG eip;
	ULONG cs;
	EFLAGS eflags;
	ULONG esp;
	ULONG ss;
} STACK_WITHERR;

typedef struct
{
	ULONG gs;
	ULONG fs;
	ULONG es;
	ULONG ds;
	ULONG edi;
	ULONG esi;
	ULONG ebp;
	ULONG esp;
	ULONG ebx;
	ULONG edx;
	ULONG ecx;
	ULONG eax;
} STACK_CONTEXT;

typedef struct  
{
	STACK_CONTEXT context;
	STACK_WITHOUTERR intStack;
} STACK_WITHOUTERRCONTEXT;

typedef struct  
{
	STACK_CONTEXT context;
	STACK_WITHERR intStack;
} STACK_WITHERRCONTEXT;
